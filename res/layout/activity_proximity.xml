<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ProximityActivity" >
    
	    

   

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" >

                    <Switch
                        android:id="@+id/light2998"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2998" />

                    <Button
                        android:id="@+id/light2998GetStatus"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:text="get status" />

                    <Button
                        android:id="@+id/color2998"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:text="Color" />

                </LinearLayout>

            </RelativeLayout>

		    <!--
		         <Button
		        android:id="@+id/view1_button"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignRight="@+id/light"
		        android:layout_below="@+id/temp"
		        android:layout_marginTop="66dp"
		        android:gravity="center_horizontal"
		        android:text="@string/button_text"
		        android:textSize="20pt" />
		    -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" >

                    <Switch
                        android:id="@+id/light2356"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2356" />

                    <Button
                        android:id="@+id/light2356GetStatus"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:text="get status" />

                    <Button
                        android:id="@+id/color2356"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Color" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" >

                    <Switch
                        android:id="@+id/light1937"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1937" />

                    <Button
                        android:id="@+id/light1937GetStatus"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:text="get status" />

                    <Button
                        android:id="@+id/color1937"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Color" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" >

                    <TextView
                        android:id="@+id/temperature"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:text="Temp"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <SeekBar
                        android:id="@+id/temp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/TemperatureGetStatus"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:minHeight="40dp"
                        android:text="get status" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" >

                    <Switch
                        android:id="@+id/lock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Lock" />

                    <Button
                        android:id="@+id/DoorGetStatus"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:text="door get status" />

                </LinearLayout>
            </RelativeLayout>
            

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
                android:maxWidth="192dp"
                android:text="@string/enable_proximity_statement" />

            <Switch
                android:id="@+id/enableProximitySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:gravity="center_horizontal"
                android:text="@string/enable_proximity_switch" />

        </LinearLayout>
        
        
        
    </FrameLayout>

</RelativeLayout>